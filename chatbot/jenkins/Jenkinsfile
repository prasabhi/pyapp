pipeline {
    agent any

    environment {
        IMAGE_NAME = "chatbot-app"
    }

    stages {

        stage('Checkout') {
            steps {
                // Explicit checkout to ensure correct workspace
                git branch: 'master',
                    url: 'https://github.com/prasabhi/pyapp.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                  docker build \
                  -t ${IMAGE_NAME}:latest \
                  -f docker/Dockerfile .
                '''
            }
        }

        stage('Run Containers') {
            steps {
                sh '''
                  docker compose down || true
                  docker compose up -d
                '''
            }
        }
    }

    post {
        always {
            echo "Pipeline completed"
        }
        failure {
            echo "Pipeline failed"
        }
    }
}
